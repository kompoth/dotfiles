xft.dpi:    100

!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
!!   urxvt configuration   !!
!!!!!!!!!!!!!!!!!!!!!!!!!!!!!

urxvt*font:             xft:Iosevka Term Extended:size=13
urxvt*scrollBar:        false
urxvt*cursorBlink:      1

! see https://forums.freebsd.org/threads/changed-behavior-in-rxvt-unicode-between-9-30-and-9-31.87711/#post-594943
urxvt.geometry: 	400x400

! zooming
urxvt.perl-ext-common:  font-size
urxvt.keysym.C-minus:   font-size:decrease
urxvt.keysym.C-plus:    font-size:increase
urxvt.keysym.C-equal:   font-size:reset

! disable ctrl+shift binding
urxvt.iso14755:         false
urxvt.iso14755_52:      false

! fixes ctrl+arrows issues
urxvt.keysym.C-Up:      \033[1;5A
urxvt.keysym.C-Down:    \033[1;5B
urxvt.keysym.C-Left:    \033[1;5D
urxvt.keysym.C-Right:   \033[1;5C

Xcursor.size:           32
Xcursor.theme:          Simp1e-Adw-Dark

